Adview1.Initialize2("Ad", "xxxxxxxx", AdView1.SIZE_SMART_BANNER)
Dim height As Int
If GetDeviceLayoutValues.ApproximateScreenSize &lt; 6 Then
    'phones
    If 100%x &gt; 100%y Then height = 32dip Else height = 50dip
